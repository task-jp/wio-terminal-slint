global Consts {
    out property <length> width: 320px;
    out property <length> height: 240px;
    out property<color> case-color: white;
    out property<color> button-color: blue;
    out property <color> bg-color: black;
}

component WioCase {
    width: Consts.width;
    height: Consts.height;
    Rectangle {
        x: 20px;
        y: 20px;
        width: 280px;
        height: 200px;
        border-color: black;
        border-width: 2px;
        background: Consts.bg-color;
    }

    Rectangle {
        x: 20px;
        y: 180px;
        width: 280px;
        height: 40px;
        background: Consts.case-color;
    }

    for i[index] in [0, 1, 2, 3] : Rectangle {
        Rectangle {
            x: 40px + i * 15px;
            y: 190px;
            width: 5px;
            height: 20px;
            border-radius: 2px;
            background: Consts.bg-color;
        }
    }
}

component WioButtons {
    width: Consts.width;
    height: Consts.height;
    in property<[bool]> f_n: [false, false, false];
    in property <int> dx: 0;
    in property <int> dy: 0;
    in property <bool> clicked: false;
    for i[index] in [0, 1, 2] : Rectangle {
        Rectangle {
            x: 40px + i * 60px;
            y: f_n[i] ? 18px : 15px;
            width: 40px;
            height: f_n[i] ? 2px : 5px;
            background: Consts.button-color;
        }
    }

    Rectangle {
        x: 260px;
        y: 180px;
        Rectangle {
            x: dx * 5px - self.width / 2;
            y: dy * 5px - self.height / 2;
            width: clicked ? 30px : 40px;
            height: self.width;
            border-radius: self.width / 2;
            background: Consts.button-color;
        }
        }
}

component WioImage inherits Image {
    width: 86px;
    height: 64px;
}

component WioSplash {
    width: Consts.width;
    height: Consts.height;
    in property <color> text-color: green;
    in property <image> image: @image-url("ferris.png");
    in-out property<bool> is-button1-pressed;
    in-out property<bool> is-button2-pressed;
    in-out property<bool> is-button3-pressed;
    in-out property<bool> is-left-pressed;
    in-out property<bool> is-up-pressed;
    in-out property<bool> is-right-pressed;
    in-out property<bool> is-down-pressed;
    in-out property<bool> is-return-pressed;

    WioCase {}
    WioButtons{
        f_n: [is-button1-pressed, is-button2-pressed, is-button3-pressed];
        dx: is-left-pressed ? -1 : is-right-pressed ? 1 : 0;
        dy: is-up-pressed ? -1 : is-down-pressed ? 1 : 0;
        clicked: is-return-pressed;
    }
    WioImage {
        source: root.image;
    }

    Text {
        x: 30px;
        y: 30px;
        text: "Booting Wio Terminal...";
        font-size: 16px;
        color: root.text-color;
    }
}

export component MainWindow inherits Window {
    width: Consts.width;
    height: Consts.height;
    default-font-family: "Noto Sans";
    wio_splash := WioSplash {}

    forward-focus: my-key-handler;
    my-key-handler := FocusScope {
        key-pressed(event) => {
            debug(event.text);
            if (event.text == Key.F1) {
                wio_splash.is-button1-pressed = true;
            }
            if (event.text == Key.F2) {
                wio_splash.is-button2-pressed = true;
            }
            if (event.text == Key.F3) {
                wio_splash.is-button3-pressed = true;
            }
            if (event.text == Key.LeftArrow) {
                wio_splash.is-left-pressed = true;
            }
            if (event.text == Key.RightArrow) {
                wio_splash.is-right-pressed = true;
            }
            if (event.text == Key.UpArrow) {
                wio_splash.is-up-pressed = true;
            }
            if (event.text == Key.DownArrow) {
                wio_splash.is-down-pressed = true;
            }
            if (event.text == Key.Return) {
                wio_splash.is-return-pressed = true;
            }
            accept
        }
        key-released(event) => {
            debug(event.text);
            if (event.text == Key.F1) {
                wio_splash.is-button1-pressed = false;
            }
            if (event.text == Key.F2) {
                wio_splash.is-button2-pressed = false;
            }
            if (event.text == Key.F3) {
                wio_splash.is-button3-pressed = false;
            }
            if (event.text == Key.LeftArrow) {
                wio_splash.is-left-pressed = false;
            }
            if (event.text == Key.RightArrow) {
                wio_splash.is-right-pressed = false;
            }
            if (event.text == Key.UpArrow) {
                wio_splash.is-up-pressed = false;
            }
            if (event.text == Key.DownArrow) {
                wio_splash.is-down-pressed = false;
            }
            if (event.text == Key.Return) {
                wio_splash.is-return-pressed = false;
            }
            accept
        }
    }
}